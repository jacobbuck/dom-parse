{
  "name": "dom-parse",
  "version": "2.1.0",
  "description": "Safely parse HTML/XML to DOM",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/node.cjs",
  "module": "./dist/node.js",
  "exports": {
    ".": {
      "browser": {
        "import": "./dist/browser.js",
        "require": "./dist/browser.cjs"
      },
      "import": "./dist/node.js",
      "require": "./dist/node.cjs"
    },
    "./browser": {
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs"
    },
    "./node": {
      "import": "./dist/node.js",
      "require": "./dist/node.cjs"
    }
  },
  "scripts": {
    "build": "vite build",
    "coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "npm run build && husky install",
    "preversion": "npm run lint && npm run test",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacobbuck/dom-parse.git"
  },
  "keywords": [
    "dom",
    "html",
    "parser",
    "xml"
  ],
  "author": "Jacob Buck <buck.jacob@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jacobbuck/dom-parse/issues"
  },
  "homepage": "https://github.com/jacobbuck/dom-parse",
  "dependencies": {
    "happy-dom": "^9.9.2"
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "vite": "^4.3.2"
  }
}
